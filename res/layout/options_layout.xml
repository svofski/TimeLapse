<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/donateIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/donate_dialog_title"
                android:src="@drawable/ic_donate" />

            <ImageView
                android:id="@+id/lastVideoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/folder_button_title"
                android:src="@drawable/ic_lapse_folder_selector" />

            <ImageView
                android:id="@+id/fpsIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lapse_rate_dialog_title"
                android:src="@drawable/ic_fps_selector" />

            <ImageView
                android:id="@+id/durationIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/duration_dialog_title"
                android:src="@drawable/ic_duration_selector" />

            <ImageView
                android:id="@+id/delayIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/delay_dialog_title"
                android:src="@drawable/ic_delay_selector" />

            <ImageView
                android:id="@+id/flashIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/flash_modes_dialog_title"
                android:src="@drawable/ic_flash_selector" />

            <ImageView
                android:id="@+id/colorEffectsIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/color_effects_dialog_title"
                android:src="@drawable/ic_color_effects_selector" />

            <ImageView
                android:id="@+id/videoSizeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/video_sizes_dialog_title"
                android:src="@drawable/ic_video_size_selector" />

            <ImageView
                android:id="@+id/whiteBalanceIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/white_balance_dialog_title"
                android:src="@drawable/ic_white_balance_selector" />

            <ImageView
                android:id="@+id/focusModeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/focus_mode_dialog_title"
                android:src="@drawable/ic_focus_mode_selector" />

            <ImageView
                android:id="@+id/isoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/iso_dialog_title"
                android:src="@drawable/ic_iso_selector" />
            
        </LinearLayout>
    </ScrollView>

</FrameLayout>